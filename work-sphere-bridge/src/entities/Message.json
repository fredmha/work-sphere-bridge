{
    "name": "Message",
    "type": "object",
    "properties": {
      "application_id": {
        "type": "string",
        "description": "ID of the related application"
      },
      "content": {
        "type": "string",
        "description": "Message content"
      },
      "sender": {
        "type": "string",
        "enum": [
          "contractor",
          "client"
        ],
        "description": "Who sent the message"
      },
      "timestamp": {
        "type": "string",
        "format": "date-time",
        "description": "When the message was sent"
      },
      "is_read": {
        "type": "boolean",
        "default": false,
        "description": "Whether the message has been read"
      }
    },
    "required": [
      "application_id",
      "content",
      "sender"
    ]
  }