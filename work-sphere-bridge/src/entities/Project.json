{
    "name": "Project",
    "type": "object",
    "properties": {
      "projectName": {
        "type": "string",
        "description": "Name of the project"
      },
      "projectDescription": {
        "type": "string",
        "description": "High-level project summary"
      },
      "category": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Project categories"
      },
      "duration": {
        "type": "string",
        "description": "Project duration"
      },
      "weeklyHours": {
        "type": "number",
        "description": "Expected weekly hours"
      },
      "incentive": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Project incentives"
      },
      "contractorRoles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "role": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "milestone",
                "timesheet"
              ]
            },
            "pay": {
              "type": "number"
            },
            "tasks": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "deliverables": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    },
    "required": [
      "projectName",
      "projectDescription"
    ]
  }